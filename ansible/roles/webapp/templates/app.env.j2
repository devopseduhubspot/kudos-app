# Application Settings
NODE_ENV={{ node_env }}
PORT={{ app_port }}
APP_NAME={{ app_name }}
LOG_LEVEL={{ log_level }}

# Server Configuration
HOST=0.0.0.0
ENVIRONMENT={{ node_env }}

# Security Settings (Add your own secrets)
SESSION_SECRET=your-super-secret-session-key-change-this
JWT_SECRET=your-jwt-secret-change-this

# Database Configuration (if using a database)
# DATABASE_URL=postgresql://user:password@localhost:5432/kudosdb
# REDIS_URL=redis://localhost:6379

# External Services (configure as needed)
# MAIL_SERVER=smtp.example.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-email-password

# Logging Configuration
LOG_FILE=/var/log/{{ app_name }}/app.log
ERROR_LOG_FILE=/var/log/{{ app_name }}/error.log

# Performance Settings
MAX_FILE_SIZE=10MB
REQUEST_TIMEOUT=30000

# Deployment Information
DEPLOYED_BY=Ansible
DEPLOYED_AT={{ ansible_date_time.iso8601 }}
DEPLOYMENT_HOST={{ inventory_hostname }}
DEPLOYMENT_USER={{ app_user }}

